{
  "name": "web-to-apk",
  "version": "1.1.2",
  "description": "Convert web applications to Android APK files using Capacitor",
  "main": "lib/index.js",
  "bin": {
    "web-to-apk": "lib/cli/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:verify": "node scripts/verify-build.js",
    "build:full": "npm run build && npm run build:verify",
    "test:build": "bash scripts/test-build.sh",
    "test:capacitor-config": "node scripts/test-capacitor-config.js",
    "test:full-build": "node scripts/test-full-build.js",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:integration": "jest tests/integration/",
    "test:web-server": "node scripts/test-web-server.js",
    "test:android-env": "node scripts/test-android-env.js",
    "dev:start": "bash scripts/dev-start.sh",
    "dev:shell": "bash scripts/dev-shell.sh",
    "dev:stop": "bash scripts/dev-stop.sh",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "fix-imports": "node scripts/fix-imports.js",
    "integration-check": "node scripts/integration-check.js",
    "validate-examples": "node scripts/validate-examples.js",
    "build-and-validate": "node scripts/build-and-validate.js",
    "project-status": "node scripts/project-status.js",
    "clean": "rimraf lib",
    "prepublishOnly": "npm run clean && npm run build",
    "web-server": "cd web-server && npm start",
    "web-server:dev": "cd web-server && npm run dev",
    "web-server:install": "cd web-server && npm install",
    "docker:build": "docker build -t web-to-apk .",
    "docker:run": "docker run -p 3000:3000 web-to-apk",
    "docker:compose": "docker-compose up -d",
    "docker:stop": "docker-compose down"
  },
  "keywords": [
    "android",
    "apk",
    "web",
    "capacitor",
    "mobile",
    "hybrid"
  ],
  "author": "RereBot.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/RereBot/web-to-apk.git"
  },
  "bugs": {
    "url": "https://github.com/RereBot/web-to-apk/issues"
  },
  "homepage": "https://github.com/RereBot/web-to-apk#readme",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.19.9",
    "@types/sharp": "^0.32.0",
    "@types/superagent": "^8.1.9",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "axios": "^1.11.0",
    "eslint": "^8.57.1",
    "express": "^4.18.2",
    "form-data": "^4.0.4",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "puppeteer": "^21.11.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@capacitor/android": "^6.0.0",
    "@capacitor/cli": "^6.0.0",
    "@capacitor/core": "^6.0.0",
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "inquirer": "^9.2.15",
    "ora": "^7.0.1",
    "sharp": "^0.33.2"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "lib/**/*",
    "templates/**/*",
    "README.md"
  ]
}
